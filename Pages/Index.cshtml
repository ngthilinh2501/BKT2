@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-lg-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Top Banner Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="premium-card gradient-hero p-5 text-center text-white shadow-lg overflow-hidden position-relative no-hover">
                <div class="position-absolute translate-middle-x start-50 top-0 w-100 h-100 opacity-10" style="background-image: radial-gradient(circle, #fff 2px, transparent 2px); background-size: 40px 40px;"></div>
                <h1 class="display-3 font-extrabold mb-3 position-relative">Vợt Thủ Phố Núi</h1>
                <p class="text-xl fst-italic position-relative opacity-90 mb-0">"Vui - Khỏe - Có Thưởng"</p>
            </div>
        </div>
    </div>

    <div class="row g-4 d-flex">
        <!-- Main Content Column -->
        <div class="col-lg-8">
            <!-- Stats Row -->
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="premium-card stat-card h-100">
                        <div class="stat-icon @(Model.IsFundNegative ? "danger" : "success") mx-auto">
                            <i class="bi bi-wallet2"></i>
                        </div>
                        <div class="stat-label">SỐ DƯ QUỸ CLB</div>
                        <div class="stat-value @(Model.IsFundNegative ? "text-danger" : "text-success")">
                            @Model.TotalFund.ToString("N0")<span class="text-lg ms-1">đ</span>
                        </div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Treasurer"))
                        {
                            <a asp-page="/Admin/Treasury/Index" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-right-circle"></i> Chi Tiết
                            </a>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="premium-card stat-card h-100">
                        <div class="stat-icon primary mx-auto">
                            <i class="bi bi-trophy"></i>
                        </div>
                        <div class="stat-label">KÈO ĐANG MỞ</div>
                        <div class="stat-value text-primary">@Model.ActiveChallengeCount</div>
                        <a asp-page="/Challenges/Index" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-arrow-right-circle"></i> Xem Kèo
                        </a>
                    </div>
                </div>
            </div>

            <!-- News Card -->
            <div class="premium-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="font-bold mb-0 text-dark d-flex align-items-center gap-2">
                        <i class="bi bi-megaphone-fill text-primary"></i> Tin Mới Nhất
                    </h5>
                    <a asp-page="/News/Index" class="text-muted text-decoration-none text-sm">
                        Xem tất cả <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
                
                @if (Model.PinnedNews.Any())
                {
                    <div class="news-list" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var news in Model.PinnedNews)
                        {
                            <div class="ranking-item news-item mb-3">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="flex-shrink-0">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-newspaper text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0 font-semibold text-dark">@news.Title</h6>
                                            @if(news.IsPinned)
                                            {
                                                <span class="badge badge-pinned ms-2">
                                                    <i class="bi bi-pin-angle-fill"></i> Ghim
                                                </span>
                                            }
                                        </div>
                                        <p class="text-sm text-muted mb-2" style="line-height: 1.5;">@news.Content</p>
                                        <small class="text-muted text-xs">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @news.CreatedDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox empty-state-icon"></i>
                        <div class="empty-state-title">Chưa có thông báo</div>
                        <p class="empty-state-text">Chưa có tin tức nào được đăng tải</p>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
            <!-- Top Players Card -->
            <div class="premium-card p-4 mb-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="stat-icon primary me-3" style="width: 48px; height: 48px; margin-bottom: 0;">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <h5 class="font-bold mb-0 text-dark">Top 5 Cao Thủ</h5>
                </div>
                <div class="ranking-container">
                    @for (int i = 0; i < Model.TopPlayers.Count; i++)
                    {
                        var player = Model.TopPlayers[i];
                        var medalIcon = i == 0 ? "🥇" : (i == 1 ? "🥈" : (i == 2 ? "🥉" : ""));
                        <div class="ranking-item d-flex align-items-center mb-2">
                            <div class="ranking-medal">
                                @if (!string.IsNullOrEmpty(medalIcon))
                                {
                                    @medalIcon
                                }
                                else
                                {
                                    <span class="ranking-number">#@(i + 1)</span>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <div class="font-semibold text-dark">@player.FullName</div>
                                <small class="text-muted text-xs">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    @player.JoinDate.ToString("MM/yyyy")
                                </small>
                            </div>
                            <div class="text-end">
                                <div class="badge badge-primary fw-bold">
                                    @player.RankLevel.ToString("0.0")
                                </div>
                                @if(player.RankLevel >= 5.0)
                                {
                                    <div class="badge badge-warning mt-1 text-xs">PRO</div>
                                }
                            </div>
                        </div>
                    }
                    @if (!Model.TopPlayers.Any())
                    {
                        <div class="empty-state py-4">
                            <i class="bi bi-trophy empty-state-icon"></i>
                            <div class="empty-state-title">Chưa có dữ liệu</div>
                            <p class="empty-state-text">Chưa có thành viên nào</p>
                        </div>
                    }
                </div>
                <div class="text-center mt-4 pt-3 border-top">
                    <a asp-page="/Challenges/Index" class="text-decoration-none text-sm font-medium text-primary">
                        Xem bảng xếp hạng <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <!-- Shortcuts Card -->
            <div class="premium-card p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="stat-icon secondary me-3" style="width: 48px; height: 48px; margin-bottom: 0;">
                        <i class="bi bi-lightning-fill"></i>
                    </div>
                    <h5 class="font-bold mb-0 text-dark">Phím Tắt</h5>
                </div>
                <div class="shortcuts-grid">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/Bookings/Create" class="shortcut-btn">
                            <div class="shortcut-icon bg-primary bg-opacity-10">
                                <i class="bi bi-calendar-check text-primary"></i>
                            </div>
                            <div>
                                <div class="font-semibold">Đặt Sân Ngay</div>
                                <small class="text-muted text-xs">Đặt lịch chơi</small>
                            </div>
                        </a>
                        <a asp-page="/Challenges/Index" class="shortcut-btn">
                            <div class="shortcut-icon bg-success bg-opacity-10">
                                <i class="bi bi-trophy text-success"></i>
                            </div>
                            <div>
                                <div class="font-semibold">Tham Gia Kèo</div>
                                <small class="text-muted text-xs">Thách đấu</small>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="shortcut-btn">
                            <div class="shortcut-icon bg-primary bg-opacity-10">
                                <i class="bi bi-box-arrow-in-right text-primary"></i>
                            </div>
                            <div>
                                <div class="font-semibold">Đăng Nhập</div>
                                <small class="text-muted text-xs">Để sử dụng đầy đủ tính năng</small>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


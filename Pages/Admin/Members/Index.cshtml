@page
@model PCM_357.Pages.Admin.Members.IndexModel

@{
    ViewData["Title"] = "Quản lý Hội viên";
}

<h1>Quản lý Hội viên</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Rank (DUPR)</th>
            <th>Ngày tham gia</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <span class="badge bg-primary">@item.RankLevel.ToString("0.00")</span>
                </td>
                <td>@item.JoinDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteMemberModal" data-id="@item.Id" data-name="@item.FullName">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteMemberModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">Xác nhận Xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-3">
                     <i class="bi bi-exclamation-circle text-danger display-4"></i>
                </div>
                <p class="text-center fs-5">Bạn có chắc chắn muốn xóa Hội viên <strong id="deleteMemberName"></strong> không?</p>
                <p class="text-danger text-center fw-bold small">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer justify-content-center border-0 pb-4">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Hủy</button>
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" id="deleteMemberId" />
                    <button type="submit" class="btn btn-danger px-4">Xóa Vĩnh Viễn</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteMemberModal = document.getElementById('deleteMemberModal');
        deleteMemberModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            
            var inputId = deleteMemberModal.querySelector('#deleteMemberId');
            var nameSpan = deleteMemberModal.querySelector('#deleteMemberName');
            
            inputId.value = id;
            nameSpan.textContent = name;
        });
    </script>
}

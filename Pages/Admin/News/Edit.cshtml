@page
@model PCM_357.Pages.Admin.News.EditModel
@{ ViewData["Title"] = "Cập nhật Tin"; }

<div class="row justify-content-center py-4">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h3 class="mb-0 fw-bold">Chỉnh Sửa Tin Tức</h3>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>
                    <input type="hidden" asp-for="News.Id" />
                    <input type="hidden" asp-for="News.CreatedDate" />

                    <div class="mb-4">
                        <label asp-for="News.Title" class="form-label fw-bold opacity-75 small text-uppercase">Tiêu đề bản tin</label>
                        <input asp-for="News.Title" class="form-control form-control-lg bg-light" placeholder="Nhập tiêu đề..." />
                        <span asp-validation-for="News.Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="News.Content" class="form-label fw-bold opacity-75 small text-uppercase">Nội dung chi tiết</label>
                        <textarea asp-for="News.Content" class="form-control bg-light" rows="8" placeholder="Nhập nội dung..."></textarea>
                        <span asp-validation-for="News.Content" class="text-danger small"></span>
                    </div>

                    <div class="p-3 bg-light rounded-3 mb-4 border border-light">
                        <div class="form-check form-switch">
                            <input class="form-check-input" asp-for="News.IsPinned" id="pinnedSwitch" />
                            <label class="form-check-label fw-bold" for="pinnedSwitch">Ghim tin này lên đầu trang?</label>
                        </div>
                        <small class="text-muted d-block mt-1 ps-4">Tin được ghim sẽ hiển thị nổi bật tại Dashboard.</small>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                            <i class="bi bi-save"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

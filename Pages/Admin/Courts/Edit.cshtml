@page
@model PCM_357.Pages.Admin.Courts.EditModel
@{ ViewData["Title"] = "Sửa Sân"; }

<h1>Sửa Sân</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Court.Id" />
            <div class="form-group mb-3">
                <label asp-for="Court.Name" class="control-label">Tên Sân</label>
                <input asp-for="Court.Name" class="form-control" />
                <span asp-validation-for="Court.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Court.Description" class="control-label">Mô tả</label>
                <textarea asp-for="Court.Description" class="form-control"></textarea>
                <span asp-validation-for="Court.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Court.IsActive" /> Hoạt động
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

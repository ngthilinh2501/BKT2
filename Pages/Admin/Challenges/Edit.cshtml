@page
@model PCM_357.Pages.Admin.Challenges.EditModel

@{
    ViewData["Title"] = "Cập nhật Sàn đấu";
}

<div class="row justify-content-center py-4">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h3 class="mb-0 fw-bold">Sửa Thông Tin Sàn Đấu</h3>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>
                    <input type="hidden" asp-for="Challenge.Id" />
                    
                    <!-- Title Section -->
                    <div class="mb-4">
                        <label asp-for="Challenge.Title" class="form-label fw-bold opacity-75 small text-uppercase">Tên Sàn đấu / Giải</label>
                        <input asp-for="Challenge.Title" class="form-control form-control-lg bg-light" placeholder="Nhập tên sàn đấu..." />
                        <span asp-validation-for="Challenge.Title" class="text-danger small"></span>
                    </div>

                    <!-- Config Grid -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Challenge.Type" class="form-label fw-bold opacity-75 small text-uppercase">Loại hình</label>
                            <select asp-for="Challenge.Type" class="form-select" asp-items="Html.GetEnumSelectList<PCM_357.Entities.ChallengeType>()"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Challenge.GameMode" class="form-label fw-bold opacity-75 small text-uppercase">Chế độ chơi</label>
                            <select asp-for="Challenge.GameMode" class="form-select" asp-items="Html.GetEnumSelectList<PCM_357.Entities.GameMode>()"></select>
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                             <label asp-for="Challenge.Status" class="form-label fw-bold opacity-75 small text-uppercase">Trạng thái</label>
                             <select asp-for="Challenge.Status" class="form-select fw-bold @(Model.Challenge.Status == PCM_357.Entities.ChallengeStatus.Ongoing ? "text-success border-success" : "")" asp-items="Html.GetEnumSelectList<PCM_357.Entities.ChallengeStatus>()"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Challenge.Config_TargetWins" class="form-label fw-bold opacity-75 small text-uppercase">Số trận thắng (TeamBattle)</label>
                            <input asp-for="Challenge.Config_TargetWins" class="form-control" placeholder="VD: 5" />
                        </div>
                    </div>

                    <div class="p-3 bg-light rounded-3 mb-4 border border-light">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Challenge.EntryFee" class="form-label fw-bold text-muted small text-uppercase">Phí tham gia (VNĐ)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">₫</span>
                                    <input asp-for="Challenge.EntryFee" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Challenge.PrizePool" class="form-label fw-bold text-success small text-uppercase">Giải thưởng (VNĐ)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-success text-white">₫</span>
                                    <input asp-for="Challenge.PrizePool" class="form-control border-success text-success fw-bold" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-5">
                         <div class="col-md-6">
                            <label asp-for="Challenge.StartDate" class="form-label fw-bold opacity-75 small text-uppercase">Ngày bắt đầu</label>
                            <input asp-for="Challenge.StartDate" class="form-control" type="datetime-local" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Challenge.EndDate" class="form-label fw-bold opacity-75 small text-uppercase">Ngày kết thúc (Dự kiến)</label>
                            <input asp-for="Challenge.EndDate" class="form-control" type="datetime-local" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                            <i class="bi bi-save"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

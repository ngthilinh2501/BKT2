@page
@model PCM_357.Pages.Admin.Challenges.CreateModel

@{
    ViewData["Title"] = "Tạo Sàn đấu Mới";
}

<h1>Tạo Sàn đấu Mới</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Challenge.Title" class="control-label">Tên Sàn đấu / Giải</label>
                <input asp-for="Challenge.Title" class="form-control" />
                <span asp-validation-for="Challenge.Title" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Challenge.Type" class="control-label">Loại</label>
                    <select asp-for="Challenge.Type" class="form-control" asp-items="Html.GetEnumSelectList<PCM_357.Entities.ChallengeType>()"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Challenge.GameMode" class="control-label">Chế độ chơi</label>
                     <select asp-for="Challenge.GameMode" class="form-control" asp-items="Html.GetEnumSelectList<PCM_357.Entities.GameMode>()"></select>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Challenge.Config_TargetWins" class="control-label">Số trận thắng mục tiêu (Cho TeamBattle)</label>
                <input asp-for="Challenge.Config_TargetWins" class="form-control" />
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Challenge.EntryFee" class="control-label">Phí tham gia (VNĐ)</label>
                    <input asp-for="Challenge.EntryFee" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Challenge.PrizePool" class="control-label">Giải thưởng (VNĐ)</label>
                    <input asp-for="Challenge.PrizePool" class="form-control" />
                </div>
            </div>

             <div class="form-group mb-3">
                <label asp-for="Challenge.StartDate" class="control-label">Ngày bắt đầu</label>
                <input asp-for="Challenge.StartDate" class="form-control" type="datetime-local" />
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo Sàn đấu" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model PCM_357.Pages.Admin.Challenges.IndexModel
@{ ViewData["Title"] = "Quản lý Sàn đấu"; }

<h1>Quản lý Sàn đấu & Kèo (Admin)</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Tạo Sàn đấu Mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Loại</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Challenges)
        {
            <tr>
                <td>
                    <a asp-page="/Challenges/Details" asp-route-id="@item.Id" class="text-decoration-none fw-bold">@item.Title</a>
                </td>
                <td>@item.Type</td>
                <td>
                    <span class="badge @(item.Status == PCM_357.Entities.ChallengeStatus.Ongoing ? "bg-success" : "bg-secondary")">
                        @item.Status
                    </span>
                </td>
                <td>
                    <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@item.Id" style="display:inline;">
                        @if (item.Status == PCM_357.Entities.ChallengeStatus.Open)
                        {
                             <button class="btn btn-sm btn-success">▶ Bắt đầu</button>
                        }
                        else if (item.Status == PCM_357.Entities.ChallengeStatus.Ongoing)
                        {
                            <button class="btn btn-sm btn-secondary">⏹ Kết thúc</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-secondary">↺ Mở lại</button>
                        }
                    </form>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận Xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa Sàn đấu này không?</p>
                <p class="text-danger fw-bold"><i class="bi bi-exclamation-triangle"></i> Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="id" id="deleteId" value="" />
                    <button type="submit" class="btn btn-danger">Xóa Vĩnh Viễn</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            // Button that triggered the modal
            var button = event.relatedTarget;
            // Extract info from data-bs-* attributes
            var id = button.getAttribute('data-id');
            // Update the modal's hidden input
            var inputId = deleteModal.querySelector('#deleteId');
            inputId.value = id;
            
            // Optional: Update form action if needed, but Handler logic usually takes ID from form data or route.
            // PageHandler expects 'id' parameter. We can pass it as hidden input 'id' if the handler binds it,
            // OR update the formaction. Razor Pages handler often binds method param from query or route data.
            // Let's ensure the form action includes the route ID or the hidden field works.
            // The handler `OnPostDeleteAsync(int id)` will look for `id` in RouteData or Form.
            // Hidden input name="id" works for Form binding.
        })
    </script>
}

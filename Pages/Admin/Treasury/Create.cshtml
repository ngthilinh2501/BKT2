@page
@model PCM_357.Pages.Admin.Treasury.CreateModel
@{ ViewData["Title"] = "Ghi Giao Dịch"; }

<div class="container-fluid px-lg-5">
    <div class="row justify-content-center py-4">
        <div class="col-lg-7">
            <div class="premium-card p-0 overflow-hidden">
                <div class="gradient-hero text-white text-center p-5">
                    <h3 class="font-bold mb-2">Ghi Nhận Giao Dịch</h3>
                    <p class="mb-0 opacity-90">Thêm thu nhập hoặc khoản chi mới</p>
                </div>
                <div class="p-4 p-md-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Transaction.Date" class="form-label">Ngày giao dịch</label>
                                <input asp-for="Transaction.Date" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="Transaction.Date" class="invalid-feedback"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Transaction.CategoryId" class="form-label">Danh mục</label>
                                <select asp-for="Transaction.CategoryId" class="form-select" asp-items="Model.CategoryList"></select>
                                <span asp-validation-for="Transaction.CategoryId" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Transaction.Amount" class="form-label">Số tiền (VNĐ)</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-success bg-opacity-10 text-success font-bold">₫</span>
                                <input asp-for="Transaction.Amount" class="form-control font-bold text-success" type="number" placeholder="0" />
                            </div>
                            <span asp-validation-for="Transaction.Amount" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Transaction.Description" class="form-label">Mô tả chi tiết</label>
                            <textarea asp-for="Transaction.Description" class="form-control" rows="4" placeholder="Nhập nội dung chi tiết..."></textarea>
                            <span asp-validation-for="Transaction.Description" class="invalid-feedback"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Lưu Giao Dịch
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

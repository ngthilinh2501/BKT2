@page
@model PCM_357.Pages.Admin.Treasury.Categories.IndexModel
@{ ViewData["Title"] = "Quản lý Danh mục"; }

<div class="container-fluid px-lg-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="font-extrabold mb-2">
                <i class="bi bi-folder2-open me-2 text-primary"></i>
                Danh Mục Thu Chi
            </h2>
            <p class="text-muted mb-0">Quản lý các loại thu chi của CLB</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Danh Mục
            </a>
            <a asp-page="../Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="premium-card p-4">
                <div class="d-flex align-items-center">
                    <div class="stat-icon primary me-3" style="margin: 0;">
                        <i class="bi bi-list-ul"></i>
                    </div>
                    <div>
                        <div class="stat-label">Tổng Danh Mục</div>
                        <div class="stat-value text-dark" style="font-size: 2rem; margin: 0;">@Model.Categories.Count</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="premium-card p-4">
                <div class="d-flex align-items-center">
                    <div class="stat-icon success me-3" style="margin: 0;">
                        <i class="bi bi-arrow-down-circle"></i>
                    </div>
                    <div>
                        <div class="stat-label">Danh Mục Thu</div>
                        <div class="stat-value text-success" style="font-size: 2rem; margin: 0;">@Model.Categories.Count(c => c.Type == PCM_357.Entities.TransactionType.Thu)</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="premium-card p-4">
                <div class="d-flex align-items-center">
                    <div class="stat-icon warning me-3" style="margin: 0;">
                        <i class="bi bi-arrow-up-circle"></i>
                    </div>
                    <div>
                        <div class="stat-label">Danh Mục Chi</div>
                        <div class="stat-value text-warning" style="font-size: 2rem; margin: 0;">@Model.Categories.Count(c => c.Type == PCM_357.Entities.TransactionType.Chi)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories List -->
    <div class="premium-card p-4">
        <div class="card-header mb-4">
            <h3 class="card-title">Danh Sách Danh Mục</h3>
        </div>

        @if (Model.Categories.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tên Danh Mục</th>
                            <th>Loại</th>
                            <th class="text-end">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Categories)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="stat-icon @(item.Type == PCM_357.Entities.TransactionType.Thu ? "success" : "warning")" style="width: 40px; height: 40px; margin: 0;">
                                            <i class="bi @(item.Type == PCM_357.Entities.TransactionType.Thu ? "bi-arrow-down-circle" : "bi-arrow-up-circle")"></i>
                                        </div>
                                        <span class="font-semibold">@item.Name</span>
                                    </div>
                                </td>
                                <td>
                                    @if(item.Type == PCM_357.Entities.TransactionType.Thu)
                                    {
                                        <span class="badge badge-success">
                                            <i class="bi bi-plus-circle"></i> THU
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">
                                            <i class="bi bi-dash-circle"></i> CHI
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox empty-state-icon"></i>
                <div class="empty-state-title">Chưa có danh mục</div>
                <p class="empty-state-text">Chưa có danh mục thu chi nào được tạo</p>
                <a asp-page="./Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Tạo Danh Mục Đầu Tiên
                </a>
            </div>
        }
    </div>
</div>

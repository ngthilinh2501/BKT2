@page
@model PCM_357.Pages.Admin.Treasury.Categories.CreateModel
@{ ViewData["Title"] = "Thêm Danh mục Mới"; }

<div class="row justify-content-center py-4">
    <div class="col-lg-6">
        <!-- Add New Category Card (Premium Style) -->
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header text-white text-center py-4 rounded-top" style="background: linear-gradient(135deg, #10b981 0%, #0ea5e9 100%);">
                <h3 class="mb-1 fw-bold">Thêm Danh Mục Mới</h3>
                <small class="opacity-75">Tạo danh mục mới cho các khoản thu/chi</small>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>
                    
                    <div class="mb-4">
                        <label asp-for="NewCategory.Name" class="form-label fw-bold opacity-75 small text-uppercase">Tên Danh Mục</label>
                        <input asp-for="NewCategory.Name" class="form-control bg-light" placeholder="Nhập tên danh mục (VD: Tiền giải thưởng)..." />
                        <span asp-validation-for="NewCategory.Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NewCategory.Type" class="form-label fw-bold opacity-75 small text-uppercase">Loại</label>
                        <select asp-for="NewCategory.Type" class="form-select bg-light" asp-items="Html.GetEnumSelectList<PCM_357.Entities.TransactionType>()"></select>
                         <span asp-validation-for="NewCategory.Type" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-page="../Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                            <i class="bi bi-plus-circle"></i> Thêm Mới
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

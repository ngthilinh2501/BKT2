@page
@model PCM_357.Pages.Admin.Treasury.Categories.DeleteModel
@{ ViewData["Title"] = "Xóa Danh mục"; }

<div class="row justify-content-center py-5">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-danger text-white text-center py-4 rounded-top">
                <h3 class="mb-1 fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Xác Nhận Xóa</h3>
                <small class="opacity-75">Hành động này không thể hoàn tác!</small>
            </div>
            <div class="card-body p-4 p-md-5 text-center">
                <h5 class="mb-4 text-muted">Bạn có muốn xóa danh mục này?</h5>
                
                <div class="bg-light p-4 rounded-3 mb-4 text-start border">
                    <div class="row mb-2">
                        <div class="col-4 fw-bold text-muted text-uppercase small">Tên:</div>
                        <div class="col-8 fw-bold">@Model.Category.Name</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-bold text-muted text-uppercase small">Loại:</div>
                        <div class="col-8">
                             @if(Model.Category.Type == PCM_357.Entities.TransactionType.Thu)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">THU</span>
                            }
                            else
                            {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">CHI</span>
                            }
                        </div>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Category.Id" />
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="bi bi-x-circle"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger px-4 rounded-pill shadow-sm">
                            <i class="bi bi-trash-fill"></i> Xác nhận Xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@page
@model PCM_357.Pages.Admin.Treasury.Categories.EditModel
@{ ViewData["Title"] = "Chỉnh sửa Danh mục"; }

<div class="row justify-content-center py-4">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header text-white text-center py-4 rounded-top" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h3 class="mb-1 fw-bold">Chỉnh Sửa Danh Mục</h3>
                <small class="opacity-75">Cập nhật thông tin danh mục</small>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>
                    <input type="hidden" asp-for="Category.Id" />

                    <div class="mb-4">
                        <label asp-for="Category.Name" class="form-label fw-bold opacity-75 small text-uppercase">Tên Danh Mục</label>
                        <input asp-for="Category.Name" class="form-control bg-light" />
                        <span asp-validation-for="Category.Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Category.Type" class="form-label fw-bold opacity-75 small text-uppercase">Loại</label>
                        <select asp-for="Category.Type" class="form-select bg-light" asp-items="Html.GetEnumSelectList<PCM_357.Entities.TransactionType>()"></select>
                        <span asp-validation-for="Category.Type" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="bi bi-check-circle"></i> Cập Nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

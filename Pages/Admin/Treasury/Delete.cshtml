@page
@model PCM_357.Pages.Admin.Treasury.DeleteModel
@{ ViewData["Title"] = "Xóa Giao Dịch"; }

<div class="container-fluid px-lg-5">
    <div class="row justify-content-center py-5">
        <div class="col-lg-6">
            <div class="premium-card p-0 overflow-hidden">
                <div class="bg-danger text-white text-center p-5">
                    <div class="stat-icon danger mx-auto mb-3" style="background: rgba(255,255,255,0.2); color: white;">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <h3 class="font-bold mb-2">Xác Nhận Xóa</h3>
                    <p class="mb-0 opacity-90">Hành động này không thể hoàn tác!</p>
                </div>
                <div class="p-4 p-md-5 text-center">
                    <h5 class="mb-4 text-muted">Bạn có chắc chắn muốn xóa giao dịch này?</h5>
                    
                    <div class="premium-card bg-light p-4 mb-4 text-start">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted text-xs text-uppercase font-semibold">Ngày:</span>
                                    <span class="font-bold">@Model.Transaction.Date.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted text-xs text-uppercase font-semibold">Danh mục:</span>
                                    <span class="badge badge-secondary">@Model.Transaction.Category.Name</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted text-xs text-uppercase font-semibold">Số tiền:</span>
                                    <span class="font-bold @(Model.Transaction.Category.Type == PCM_357.Entities.TransactionType.Thu ? "text-success" : "text-danger")">
                                        @Model.Transaction.Amount.ToString("N0") đ
                                    </span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-start">
                                    <span class="text-muted text-xs text-uppercase font-semibold">Mô tả:</span>
                                    <span class="text-muted fst-italic text-end" style="max-width: 60%;">@Model.Transaction.Description</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Transaction.Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill"></i> Xác nhận Xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

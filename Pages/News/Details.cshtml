@page
@model PCM_357.Pages.News.DetailsModel
@{ ViewData["Title"] = Model.News.Title; }

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Tin tức</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
        </ol>
    </nav>

    <div class="card shadow-lg border-0 rounded-xl">
        <div class="card-body p-5">
            @if(Model.News.IsPinned) { <span class="badge bg-warning text-dark mb-2">Ghim</span> }
            <h1 class="display-5 fw-bold mb-3">@Model.News.Title</h1>
            <p class="text-muted border-bottom pb-3">
                Đăng ngày: <strong>@Model.News.CreatedDate.ToString("dd 'tháng' MM, yyyy - HH:mm")</strong>
            </p>

            <div class="article-content mt-4" style="line-height: 1.8; font-size: 1.1rem;">
                <!-- Preserve newlines in content if simplistic -->
                @foreach(var para in Model.News.Content.Split('\n')) {
                    <p>@para</p>
                }
            </div>
            
            <div class="mt-5 text-center">
                <a asp-page="./Index" class="btn btn-outline-secondary">Quay lại danh sách tin</a>
            </div>
        </div>
    </div>
</div>
